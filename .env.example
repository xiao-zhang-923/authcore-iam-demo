# AuthCore IAM 环境配置模板
# 复制此文件为 .env 并根据你的实际环境修改以下配置

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=authcore_iam
DB_USER=authcore
DB_PASSWORD=your_db_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_PORT=3307

# 应用端口配置
FRONTEND_PORT=3000
BACKEND_PORT=3001

# 应用配置
JWT_SECRET=your_jwt_secret_key_here
NODE_ENV=production

# 邮件配置 - 请替换为你自己的邮箱配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password_or_app_password
SMTP_FROM=your_email@example.com

# 超级管理员配置
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_EMAIL=you_email
SUPER_ADMIN_PASSWORD=you_email_password
SUPER_ADMIN_DISPLAY_NAME=超级管理员

# 默认组织配置
DEFAULT_ORG_NAME=you_org
DEFAULT_ORG_CODE=you_org_code
DEFAULT_ORG_DESCRIPTION=系统默认组织